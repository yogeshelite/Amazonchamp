@model IEnumerable<Amazonweb.Models.UserAboutModel>

@{
    ViewBag.Title = "AboutsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AboutsList</h2>

<div class="am-pagetitle">
    <h5 class="am-title">AboutsList</h5>
    @Html.ActionLink("Create New", "Create")
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="am-pagebody">
        <div class="card pd-20">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AboutTitle)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.AboutSummary)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AboutTitle)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.AboutSummary)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td><img src="@Url.Content(item.AttachmentLogoName)" width="50" /></td>
                            <td>

                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}
