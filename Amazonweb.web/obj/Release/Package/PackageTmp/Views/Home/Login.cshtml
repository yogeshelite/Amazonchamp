@model Amazonweb.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginSignup.cshtml";
}
<script type="text/javascript">
    function ForgetPassword() {
        var UserName = document.getElementById("UserName").value;
        $.ajax({
            url: "../../Home/ForGetPassword",
            type: "POST",
            data: {
                UserName: UserName

            },
            success: function (result) {


                var resp = JSON.parse(result);
                if (resp[0].Response)
                {
                    alert("Please Check Email");
                }
            }
        });
    }
</script>
@using (Html.BeginForm("AutheticateUser", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="am-signin-wrapper">
        <div class="am-signin-box">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <div>
                        <h2>AMZCHAMP</h2>
                        <p>Welcome to AmzChamp Join us & Boost Your Sales for Less</p>


                        <hr>
                        <p>
                            Don't have an account? <br> @Html.ActionLink("Sign up Now", "Registeration", "Home")
                            @*<a href="page-signup.html">Sign up Now</a>*@
                        </p>
                    </div>
                </div>
                <div class="col-lg-7">
                    <h5 class="tx-gray-800 mg-b-25">Signin to Your Account</h5>

                    <div class="form-group">
                        <label class="form-control-label">User:</label>

                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div><!-- form-group -->

                    <div class="form-group">
                        <label class="form-control-label">Password:</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div><!-- form-group -->

                    <div class="form-group mg-b-20"><a href="">Reset password</a></div>
                    
                        <input type="button" onclick="ForgetPassword()" class="btn btn-block" value="Forget Password"/>
                        @*@Html.ActionLink("Forget Password", "ForGetPassword", "Home")*@
                    
                    <br />
                    <span class="text-danger">@ViewBag.Message</span>

                    <button type="submit" class="btn btn-block">Sign In</button>

                </div><!-- col-7 -->
            </div><!-- row -->
            @{
                Html.RenderPartial("PartialView/_FooterPartial");
            }
        </div><!-- signin-box -->
    </div>

}